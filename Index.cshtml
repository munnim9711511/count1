@{
    ViewData["Title"] = "Home Page";
}


    <div class="slider">
        <ul class="slides">
            @foreach (var item in ViewBag.slider)
            {
                <li>
                    <img src="~/slideImage/@item.ImgUrl"> <!-- random image -->
                </li>
            }
        </ul>
    </div>

<div class="card grey lighten-4">
     <div class="row">
           <div class="col s12 m4">
               
                   <div class="card-content">
             <h5 class="dh center-align" style="font-size: 20px;" ><strong>    ގެލަރީ   </strong></h5><hr>
        <div class="container">
        @foreach (var item in ViewBag.gallery)
          {
              <img src="~/gallery/@item.ImgUrl" style="width: 80px;">    
             }
        </div>
        
             </div>
             
                 <div class="card-content">
        <h5 class="dh center-align" style="font-size: 20px;" ><strong>    އިސްތިހާރު   </strong></h5><hr>
                 </div>
              
        </div>
           
           <div class="col s12 m4">
               
                   <div class="card-content">
               <h5 class="dh center-align" style="font-size: 20px;" ><strong>   ފަހުގެ އެންގުންތައް   </strong></h5><hr>
               </div>
               <div class="container">
               @foreach (var item in ViewBag.anouncements)
                  {
          <ul class="right-align">
              <li style="font-family: Faruma;direction: rtl;font-size: 20px;">
              <a href=""><img src="~/images/icon/red-circle-with-pdf-icon-png-20.png" style="width: 25px;padding-left: 5px;"> @item.Title</a>
             </li>
          </ul>   
                   }
                      </div>
                   
           </div>

           <div class="col s12 m4">
            
                   <div class="card-content">
               <h5 class="dh center-align" style="font-size: 20px;" ><strong>   ފަހުގެ ޙަބަރު   </strong></h5><hr>
               </div>
               <div class="container">
               @foreach (var item in ViewBag.news)
                    {
           <div class="row">
               <div class="col s4"><img src="~/newsImage/@item.ImgUrl" style="width: 85%;" class="responsive-img"></div>
                <div class="col s8 right-align"><a class="dh right-align" style="font-size: 19px;" href="@Url.Action("Index","News",new{id =@item.Id})">@item.Title</a></div>
           </div>
           <hr>
                   }
                   </div>
                   
           </div>

          </div>
 
 </div>
    